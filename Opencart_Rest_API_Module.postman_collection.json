		{
			"name": "Cart content",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// create a variable cart id\r",
							"var jsonData = pm.response.json();\r",
							"pm.environment.set(\"cart_id\",jsonData.products[0].cart_id);\r",
							"\r",
							"// validating the product name \r",
							"pm.test(\"checking the product name\",()=> {\r",
							"  pm.expect(jsonData.products[0].name).to.eql(\"iPhone\");\r",
							"});"
